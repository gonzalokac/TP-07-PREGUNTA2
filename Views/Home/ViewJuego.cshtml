@using TP_07_PREGUNTA2.Models;
@{
    ViewData["Title"] = "Juego";
    ViewBag.Title = "Pregunta Juego";
}
<Head>
 <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/Juego.css">
</Head>
 <body>
<div>
    <img src="@ViewBag.Pregunta.Foto" class="img-fluid mb-4" />

    <label id="Enunciado">@ViewBag.Pregunta.Enunciado</label>

    <form action='@Url.Action("VerificarRespuesta", "Home")' method="post">
    <input type="hidden" name="idPregunta" value="@ViewBag.Pregunta.idPregunta">
        @foreach(Respuesta resp in ViewBag.LRespuestaPregunta){
            <button type="submit" class="btn btn-info"  name="idRespuesta" value="@resp.idRespuesta">@resp.Contenido</button>
        }

        
    </form>
</div>
<footer>    
         
             <div class="col-md-6 text-end">
                    <ul class="list-inline footer-links">
                        <li class="list-inline-item">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">
                                Privacy Policy
                            </a>
                        </li>

                        <li class="list-inline-item">
                            <a href="@Url.Action("Creditos", "Home")'" class="text-white">
                                Creditos
                            </a>
                        </li>
                    </ul>
                </div>
 </footer>

    
 </body>