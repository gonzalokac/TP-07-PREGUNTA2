@{
   ViewData["Title"]  = "Configurarjuego";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/Config.css">
    <style>    
  

</style>
</head>

<body>
    

<h2>Configurar Juego</h2>

<form action='@Url.Action("Comenzar", "Home")' method="get">
    <div>
        <label for="dificultad" >Dificultad:</label>
        <select id="dificultad" name="dificultad" required>
            <option value="-1">Todas</option>
            <option value="1">Fácil</option>
            <option value="2">Media</option>
            <option value="3">Difícil</option>
        </select>
    </div>
    <div>
        <label for="categoria">Categoría:</label>
        <select id="categoria" name="categoria" required>
            <option value="-1">Todas</option>
            <option value="1">Fútbol Argentino</option>
            <option value="2">Copas Inetrnacionales</option>
            <option value="3">Historia del fútbol</option>
            <option value="4">Fútbol Europeo</option>
            <option value="5">Messi</option>
        </select>
    </div>
    <div id=Usuario>
        <label for="username">Nombre de Usuario:</label>
        <input type="text" id="username" name="username" required />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Jugar</button>
    </div>
</form>
<footer>    
         
             <div class="col-md-6 text-end">
                    <ul class="list-inline footer-links">
                        <li class="list-inline-item">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">
                                Privacy Policy
                            </a>
                        </li>

                        <li class="list-inline-item">
                            <a href="@Url.Action("Creditos", "Home")" class="text-white">
                                Creditos
                            </a>
                        </li>
                    </ul>
                </div>
 </footer>
</body>
